<%-include("../header");%>
<div class="col-12">
    <h1>Agregar producto</h1>
    <form method="post" action="/productos/insertar">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombre", placeholder="Nombre del producto" class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="Precio">Precio</label>
            <input required id="precio", placeholder="Precio del producto" class="form-control" type="number" step="0.01" min="0" name="precio" >
        </div>
        <br>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/productos" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<br>
<%- include('../footer') %>